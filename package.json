{
    "name": "@genx/jes",
    "version": "2.1.1",
    "description": "JSON Expression Syntax (JES)",
    "main": "lib/index.js",
    "module": "lib/index.js",
    "react-native": "lib/index.js",
    "publishConfig": {
        "access": "public"
    },
    "scripts": {
        "doc": "jsdoc -c jsdoc.json -t ./node_modules/ink-docstrap/template -R README.md -d './docs' -r --verbose ./src",
        "clean": "shx rm -rf lib",
        "test": "mocha --recursive src/**/*.spec.js",
        "cover": "nyc --reporter=html --reporter=text mocha --recursive src/**/*.spec.js && open ./coverage/index.html",
        "prettier": "prettier --write .",
        "commitlint": "commitlint --edit \"$1\"",
        "lint": "eslint \"**/*.js\"",
        "build": "pnpm clean && NODE_ENV=production babel src -d lib --ignore \"**/__test__/*.js\" --source-maps --copy-files --no-copy-ignored",
        "release": "release-it",
        "prepare": "husky install"
    },
    "author": "Rockie Guo <rockie@kitmi.com.au>",
    "license": "MIT",
    "repository": "https://github.com/genx-tech/gx-jes.git",
    "bugs": {
        "url": "https://github.com/genx-tech/gx-jes/issues"
    },
    "keywords": [
        "gen-x",
        "json",
        "expression"
    ],
    "nyc": {
        "exclude": [
            "lib",
            "**/*.spec.js"
        ]
    },
    "eslintConfig": {
        "root": true,
        "extends": [
            "eslint:recommended"
        ],
        "env": {
            "shared-node-browser": true,
            "commonjs": true,
            "es6": true,
            "es2022": true
        },
        "parserOptions": {
            "ecmaVersion": 13,
            "sourceType": "module"
        }
    },
    "peerDependencies": {
        "@genx/july": ">= 1.1.1"
    },
    "devDependencies": {
        "@babel/cli": "^7.18.9",
        "@babel/core": "^7.18.9",
        "@babel/register": "^7.18.9",
        "@commitlint/config-conventional": "^11.0.0",
        "@genx/app": "^2.0.0",
        "@genx/babelnode": "*",
        "@genx/data": "^2.0.0",
        "@release-it/conventional-changelog": "^5.0.0",
        "commitlint": "^11.0.0",
        "eslint": "^8.19.0",
        "eslint-config-prettier": "^8.3.0",
        "eslint-plugin-prettier": "^4.0.0",
        "glob": "^8.0.3",
        "husky": "^8.0.1",
        "ink-docstrap": "^1.3.2",
        "jsdoc": "^3.6.6",
        "lodash": "^4.17.21",
        "mocha": "^10.0.0",
        "prettier": "^2.7.1",
        "release-it": "^15.1.2",
        "should": "^13.2.3",
        "shx": "^0.3.4"
    },
    "commitlint": {
        "extends": [
            "@commitlint/config-conventional"
        ]
    },
    "release-it": {
        "git": {
            "commitMessage": "chore: release ${version}",
            "tagName": "v${version}"
        },
        "npm": {
            "publish": true
        },
        "github": {
            "release": true
        },
        "plugins": {
            "@release-it/conventional-changelog": {
                "preset": "angular"
            }
        }
    },
    "eslintIgnore": [
        "/node_modules",
        "/lib",
        "/test",
        "/docs",
        "/**/__test__",
        "babel.config.js"
    ],
    "prettier": {
        "quoteProps": "consistent",
        "printWidth": 120,
        "singleQuote": true,
        "trailingComma": "es5",
        "tabWidth": 4,
        "useTabs": false
    },
    "react-native-builder-bob": {
        "source": "src",
        "output": "lib",
        "targets": [
            "module"
        ]
    }
}
