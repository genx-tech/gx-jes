{
    "name": "@genx/jes",
    "version": "1.2.2",
    "description": "JSON Expression Syntax (JES)",
    "main": "lib/commonjs/index.js",
    "module": "lib/module/index.js",
    "react-native": "src/index.js",
    "publishConfig": {
        "access": "public"
    },
    "scripts": {
        "doc": "jsdoc -c jsdoc.json -t ./node_modules/ink-docstrap/template -R README.md -d './docs' -r --verbose ./src",
        "clean": "rm -rf lib",
        "test": "mocha --recursive src/**/*.spec.js",
        "cover": "nyc --reporter=html --reporter=text mocha --recursive src/**/*.spec.js && open ./coverage/index.html",
        "prettier": "prettier --write .",
        "lint": "eslint \"**/*.js\"",
        "build": "del-cli lib && bob build && NODE_ENV=production babel src -d lib/commonjs --source-maps --copy-files && del lib/**/__test__",
        "release": "release-it"
    },
    "author": "Rockie Guo <rockie@kitmi.com.au>",
    "license": "MIT",
    "repository": "https://github.com/genx-tech/gx-jes.git",
    "bugs": {
        "url": "https://github.com/genx-tech/gx-jes/issues"
    },
    "keywords": [
        "gen-x",
        "json",
        "expression"
    ],
    "nyc": {
        "exclude": [
            "babel.config.js",
            "lib",
            "**/*.spec.js"
        ]
    },
    "mocha": {
        "require": [
            "@babel/register",
            "should"
        ],
        "enable-source-maps": true,
        "timeout": 30000
    },
    "eslintConfig": {
        "extends": [
            "eslint:recommended"
        ],
        "env": {
            "browser": true,
            "node": true,
            "amd": true,
            "es6": true,
            "es2017": true,
            "es2020": true,
            "es2021": true
        },
        "parser": "@babel/eslint-parser",
        "parserOptions": {
            "sourceType": "module",
            "allowImportExportEverywhere": false,
            "ecmaFeatures": {
                "globalReturn": false
            },
            "babelOptions": {
                "configFile": "./babel.config.js"
            }
        },
        "rules": {
            "no-unused-vars": "warn"
        }
    },
    "dependencies": {
        "@genx/error": "*",
        "@genx/july": "*"
    },
    "devDependencies": {
        "@babel/cli": "^7.15.7",
        "@babel/eslint-parser": "^7.16.5",
        "@babel/register": "^7.15.3",
        "@commitlint/config-conventional": "^11.0.0",
        "@genx/app": "*",
        "@genx/data": "*",
        "@release-it/conventional-changelog": "^2.0.0",
        "babel-plugin-add-module-exports": "^1.0.4",
        "babel-plugin-source-map-support": "^2.1.3",
        "commitlint": "^11.0.0",
        "core-js": "^3.8.3",
        "del-cli": "^3.0.1",
        "eslint": "^7.2.0",
        "eslint-config-prettier": "^7.0.0",
        "eslint-plugin-prettier": "^3.1.3",
        "husky": "^4.2.5",
        "ink-docstrap": "^1.3.2",
        "jsdoc": "^3.6.6",
        "mocha": "^8.2.1",
        "nyc": "^15.1.0",
        "prettier": "^2.0.5",
        "react-native-builder-bob": "^0.18.2",
        "release-it": "^14.2.2",
        "should": "^13.2.3",
        "source-map-support": "^0.5.19"
    },
    "husky": {
        "hooks": {
            "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
            "pre-commit": "npm run lint"
        }
    },
    "commitlint": {
        "extends": [
            "@commitlint/config-conventional"
        ]
    },
    "release-it": {
        "git": {
            "commitMessage": "chore: release ${version}",
            "tagName": "v${version}"
        },
        "npm": {
            "publish": true
        },
        "github": {
            "release": true
        },
        "plugins": {
            "@release-it/conventional-changelog": {
                "preset": "angular"
            }
        }
    },
    "eslintIgnore": [
        "/node_modules",
        "/lib",
        "/test",
        "/docs",
        "/**/__test__",
        "babel.config.js"
    ],
    "prettier": {
        "quoteProps": "consistent",
        "singleQuote": true,
        "tabWidth": 4,
        "trailingComma": "es5",
        "useTabs": false
    },
    "react-native-builder-bob": {
        "source": "src",
        "output": "lib",
        "targets": [
            "module"
        ]
    }
}
