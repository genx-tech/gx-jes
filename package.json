{
    "name": "@genx/jes",
    "version": "1.3.1",
    "description": "JSON Expression Syntax (JES)",
    "main": "lib/index.js",
    "module": "src/index.js",
    "react-native": "src/index.js",    
    "publishConfig": {
        "access": "public"
    },
    "scripts": {
        "doc": "jsdoc -c jsdoc.json -t ./node_modules/ink-docstrap/template -R README.md -d './docs' -r --verbose ./src",
        "clean": "shx rm -rf lib",
        "test": "mocha --recursive src/**/*.spec.js",
        "cover": "nyc --reporter=html --reporter=text mocha --recursive src/**/*.spec.js && open ./coverage/index.html",
        "prettier": "prettier --write .",
        "commitlint": "commitlint --edit \"$1\"",
        "lint": "eslint \"**/*.js\"",
        "build:prod": "pnpm clean && NODE_ENV=production babel src -d lib --ignore \"**/__test__/*.js\" --source-maps --copy-files --no-copy-ignored",
        "build": "sh ./build.sh",
        "release": "release-it",
        "prepare": "husky install"
    },
    "author": "Rockie Guo <rockie@kitmi.com.au>",
    "license": "MIT",
    "repository": "https://github.com/genx-tech/gx-jes.git",
    "bugs": {
        "url": "https://github.com/genx-tech/gx-jes/issues"
    },
    "keywords": [
        "gen-x",
        "json",
        "expression"
    ],
    "nyc": {
        "exclude": [
            ".*",
            "lib",
            "**/*.spec.js"
        ]
    },
    "eslintConfig": {
        "root": true,
        "extends": [
            "eslint:recommended"
        ],
        "env": {
            "shared-node-browser": true,
            "commonjs": true,
            "es6": true,
            "es2022": true
        },
        "parserOptions": {
            "ecmaVersion": 13,
            "sourceType": "module"
        }
    },
    "peerDependencies": {
        "@genx/july": ">= 1.2.1"
    },
    "devDependencies": {
        "@babel/cli": "7.15.7",
        "@babel/core": "7.15.5",
        "@babel/preset-env": "7.15.0",
        "@babel/register": "7.15.3",
        "@commitlint/config-conventional": "^11.0.0",
        "@genx/app": "^2.0.4",
        "@genx/babelnode": "^7.14.9",
        "@genx/data": "^2.1.1",
        "@genx/july": "^1.2.1",
        "@release-it/conventional-changelog": "^5.0.0",
        "babel-plugin-add-module-exports": "^1.0.4",
        "babel-plugin-source-map-support": "^2.2.0",
        "commitlint": "^11.0.0",
        "eslint": "^8.20.0",
        "eslint-config-prettier": "^8.5.0",
        "eslint-plugin-prettier": "^4.2.1",
        "glob": "^8.0.3",
        "husky": "^8.0.1",
        "ink-docstrap": "^1.3.2",
        "jsdoc": "^3.6.10",
        "lodash": "^4.17.21",
        "mocha": "^10.0.0",
        "nyc": "^15.1.0",
        "prettier": "^2.7.1",
        "release-it": "^15.1.2",
        "should": "^13.2.3",
        "shx": "^0.3.4"
    },
    "commitlint": {
        "extends": [
            "@commitlint/config-conventional"
        ]
    },
    "release-it": {
        "git": {
            "commitMessage": "chore: release ${version}",
            "tagName": "v${version}"
        },
        "npm": {
            "publish": true
        },
        "github": {
            "release": true
        },
        "plugins": {
            "@release-it/conventional-changelog": {
                "preset": "angular"
            }
        }
    },
    "eslintIgnore": [
        "/node_modules",
        "/lib",
        "/test",
        "/docs",
        "/**/__test__",
        "babel.config.js"
    ],
    "prettier": {
        "quoteProps": "consistent",
        "printWidth": 120,
        "singleQuote": true,
        "trailingComma": "es5",
        "tabWidth": 4,
        "useTabs": false
    },
    "dependencies": {
        "core-js": "^3.30.2",
        "source-map-support": "^0.5.21"
    }
}
